<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:gr="clr-namespace:MauiWorkflowGraph.Graphics"
             x:Class="MauiWorkflowGraph.MainPage">

    <ContentPage.Resources>
		<gr:GraphRenderer x:Key="WorkflowGraphic" />
	</ContentPage.Resources>
	<Grid>

		<GraphicsView
			StartInteraction="myGraphicsView_StartInteraction"
			x:Name="myGraphicsView"
			Drawable="{StaticResource WorkflowGraphic}"
			HorizontalOptions="Fill"
			VerticalOptions="Fill"
			 />

	</Grid>
</ContentPage>
