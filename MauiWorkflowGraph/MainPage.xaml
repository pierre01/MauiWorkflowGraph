<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiWorkflowGraph.MainPage" xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 xmlns:gr="clr-namespace:MauiWorkflowGraph.Graphics"
			 x:DataType="gr:GraphRenderer" >

	<ScrollView HorizontalScrollBarVisibility="Always" Orientation="Both" VerticalScrollBarVisibility="Always">

		<GraphicsView x:Name="myGraphicsView"
					  VerticalOptions="Fill"
					  HorizontalOptions="Fill"
		              HeightRequest="{Binding ContentHeight}"
					  StartInteraction="myGraphicsView_StartInteraction"
		              WidthRequest="{Binding ContentWidth}" />

	</ScrollView>
</ContentPage>
